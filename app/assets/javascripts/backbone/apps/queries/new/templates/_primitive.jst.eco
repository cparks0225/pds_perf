<div class="form-group">
  <label for="<%= @unique_id %>" class="col-sm-2 control-label"><%= @name %></label>
  <div class="col-sm-4">
    <input type="<%= @inputType %>" class="form-control" id="<%= @unique_id %>" name="<%= @name %>" placeholder="<%= @name %>">
  </div>
  <div class="col-sm-4">
    <p><%= @description %></p>
  </div>
  <div class="col-sm-2">
    <p><%= @dataType %></p>
  </div>
</div>